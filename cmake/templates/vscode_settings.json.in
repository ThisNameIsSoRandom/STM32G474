{
    // STM32CubeCLT toolchain paths
    "cmake.cmakePath": "@CMAKE_PATH@",
    "cmake.generator": "Ninja",
    
    // CMake configuration settings
    "cmake.configureSettings": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_MAKE_PROGRAM": "@NINJA_PATH@"
    },
    
    // Build settings
    "cmake.buildArgs": ["-j", "10"],
    "cmake.buildDirectory": "${workspaceFolder}/@BUILD_DIR@",
    
    // Configure CMake to always use the presets
    "cmake.useCMakePresets": "never",
    
    // IntelliSense configuration for ARM GCC
    "C_Cpp.default.compilerPath": "@GCC_PATH@",
    "C_Cpp.default.intelliSenseMode": "@INTELLISENSE_MODE@",
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    
    // Terminal settings for tasks
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "terminal.integrated.env.windows": {
        "PATH": "C:/ST/STM32CubeCLT_1.18.0/CMake/bin;C:/ST/STM32CubeCLT_1.18.0/GNU-tools-for-STM32/bin;C:/ST/STM32CubeCLT_1.18.0/OpenOCD/bin;C:/ST/STM32CubeCLT_1.18.0/Ninja/bin;${env:PATH}"
    },
    
    // File associations
    "files.associations": {
        "*.h": "c",
        "*.c": "c",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "*.ld": "linkerscript",
        "*.s": "arm"
    },
    
    // Exclude unnecessary files from explorer
    "files.exclude": {
        "**/build": true,
        "**/cmake-build-*": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Drivers": @EXCLUDE_DRIVERS_MIDDLEWARE@,
        "**/Middlewares": @EXCLUDE_DRIVERS_MIDDLEWARE@
    },
    
    // Search exclude patterns
    "search.exclude": {
        "**/build": true,
        "**/cmake-build-*": true,
        "**/Drivers": @EXCLUDE_DRIVERS_MIDDLEWARE@,
        "**/Middlewares": @EXCLUDE_DRIVERS_MIDDLEWARE@
    },
    
    // Project-specific settings
    "cmake.buildTask": true,
    "cmake.defaultVariants": {
        "buildType": {
            "default": "debug",
            "choices": {
                "debug": {
                    "short": "Debug",
                    "long": "Debug build with debug info",
                    "buildType": "Debug"
                },
                "release": {
                    "short": "Release",
                    "long": "Release build with optimizations",
                    "buildType": "Release"
                }
            }
        }
    }
}