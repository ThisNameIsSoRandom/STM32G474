{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure CMake",
            "type": "shell",
            "command": "@CMAKE_PATH@",
            "args": [
                "-B", "${workspaceFolder}/@BUILD_DIR@",
                "-G", "Ninja",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_MAKE_PROGRAM=@NINJA_PATH@"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Build @PROJECT_NAME@",
            "type": "shell",
            "command": "@CMAKE_PATH@",
            "args": [
                "--build", "${workspaceFolder}/@BUILD_DIR@",
                "--target", "@BUILD_TARGET@",
                "-j", "10"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$gcc"],
            "dependsOn": "Configure CMake"
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "@CMAKE_PATH@",
            "args": [
                "--build", "${workspaceFolder}/@BUILD_DIR@",
                "--target", "clean"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Rebuild @PROJECT_NAME@",
            "dependsOn": ["Clean Build", "Build @PROJECT_NAME@"],
            "dependsOrder": "sequence",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}